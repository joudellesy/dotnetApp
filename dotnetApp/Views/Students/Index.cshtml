@model IEnumerable<dotnetApp.Models.Students>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Student List</h1>

<p style="text-align:right;margin-right:20px;">
    <a  asp-action="SaveOrEdit">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Section)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrolledDate)
                </th>
                <th></th>
                <th>Edit Action</th>
                <th>Details Action</th>
                <th>Delete Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrolledDate)
                    </td>
                    <td>
                    <td class="text-center">
                        <a asp-action="SaveOrEdit"  asp-route-studentId="@item.StudentId">Edit</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Details"  asp-route-studentId="@item.StudentId">Details</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete"  asp-route-studentId="@item.StudentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>