@model dotnetApp.Models.Students
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 border">
    <h1>Student Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Section)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnrolledDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnrolledDate)
        </dd>
    </dl>
    <div>
        <a  asp-action="SaveOrEdit" asp-route-studentId="@Model.StudentId">Edit</a>
        <a  asp-action="Index">Back</a>
    </div>
</div>